{
  "name": "@eigenpal/docx-editor",
  "version": "0.1.0",
  "description": "A browser-based DOCX template editor with variable insertion support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --hot demo/main.tsx",
    "build": "tsup && bun run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:demo": "bun build ./demo/main.tsx --outdir ./demo/dist --target browser",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun test && bun run build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "wysiwyg-editor": "^1.10.0",
    "docxtemplater": "^3.50.0",
    "jszip": "^3.10.1",
    "pizzip": "^3.1.7",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.19.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.7"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^13.3.8",
    "@testing-library/react": "^14.1.2",
    "@types/bun": "^1.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.312.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "docx",
    "editor",
    "template",
    "word",
    "document",
    "react",
    "prosemirror"
  ],
  "author": "EigenPal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eigenpal/docx-editor.git"
  }
}
